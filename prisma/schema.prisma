generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Sport {
  id       String  @id @default(cuid())
  name     String
  slug     String  @unique
  isActive Boolean @default(true)

  events SportEvent[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SportEvent {
  id String @id @default(cuid())

  day   Int
  month Int
  year  Int?

  title       String
  description String

  sportId String
  sport   Sport  @relation(fields: [sportId], references: [id], onDelete: Cascade)

  importance Int     @default(1) // 1=low, 4=legendary
  location   String?

  sourceUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([day, month])
  @@index([sportId])
}
